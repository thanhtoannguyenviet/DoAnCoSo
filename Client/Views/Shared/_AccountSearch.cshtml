
@model System.Collections.Generic.List<Client.Models.DTO.AccountStaff>

<div class="table-responsive" id="table">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>No.</th>
                <th>Name Staff</th>
                <th>Phone number</th>
                <th>Email</th>
                <th>Birthday</th>
                <th>Mistake</th>
                <th>Bank Card ID</th>
                <th>Detail</th>
            </tr>
        </thead>
        <tbody class="accordion" id="accordionExample">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.staff.id</td>
                    <td>@item.staff.staffName</td>
                    <td>@item.staff.staffPhone</td>
                    <td>@item.staff.staffEmail</td>
                    <td>@item.staff.staffBirtday</td>
                    <td>@item.staff.mistakeCount</td>
                    <td>@item.staff.bankCard</td>
                    <td>
                        @Ajax.ActionLink("BAN", "BanAccount", new { id = item.staff.id }, new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "Content"
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>